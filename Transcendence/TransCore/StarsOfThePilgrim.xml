<TranscendenceAdventure
		UNID=				"&unidStarsOfThePilgrim;"
		name=				"Domina &amp; Oracus I: The Stars of the Pilgrim"
		release=			"1" 
		>
	
	<Library unid="&unidCoreTypesLibrary;"/>
	<Library unid="&unidRPGLibrary;"/>
	<Library unid="&unidGalaxyLibrary;"/>
