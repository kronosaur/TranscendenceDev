<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

	<Type unid="&CORE_unidCoreCriteria;">
		<AttributeDesc>
			<!-- Fuel Criteria -->

			<ItemAttribute id="core.fissionFuel"	label="fission fuel"		criteriaLabel="fission fuels"			criteria="f +fissionFuel"/>
			<ItemAttribute id="core.fusionFuel"		label="fusion fuel"			criteriaLabel="fusion fuels"			criteria="f +fusionFuel"/>
			<ItemAttribute id="core.antimatterFuel"	label="antimatter fuel"		criteriaLabel="antimatter fuels"		criteria="f +antimatterFuel"/>
			<ItemAttribute id="core.zeroPointFuel"	label="zero-point fuel"		criteriaLabel="zero-point fuel"			criteria="f +zeroPointFuel"/>
			<ItemAttribute id="core.preonicFuel"	label="preonic fuel"		criteriaLabel="preonic fuels"			criteria="f +preonicFuel"/>
			<ItemAttribute id="core.graviticFuel"	label="gravitic fuel"		criteriaLabel="gravitic fuels"			criteria="f +graviticFuel"/>
			<ItemAttribute id="core.darkMatterFuel"	label="dark matter fuel"	criteriaLabel="dark matter fuels"		criteria="f +darkMatterFuel"/>

			<!-- Misc Criteria -->

			<ItemAttribute id="core.ore"			label="ore"					criteriaLabel="ores"					criteria="* +ore; -illegal;"/>
		</AttributeDesc>
	</Type>

	<!-- Generic Enhancement -->

	<ItemType UNID="&CORE_vtGenericEnhancement;"
			name=				"enhancement"
			virtual=			"true"
			level=				"1"
			>
		<Image imageID="&CORE_rsItems1;" imageX="288" imageY="768" imageWidth="96" imageHeight="96"/>

		<Language>
			<!-- These values are used by intItemEnhanceStatus. -->

			<Text id="itemEnhanceResult.alreadyEnhanced">%ItemName% is already enhanced</Text>
			<Text id="itemEnhanceResult.damaged"></Text>
			<Text id="itemEnhanceResult.defectRemoved">%ItemName% has been repaired</Text>
			<Text id="itemEnhanceResult.defectReplaced"></Text>
			<Text id="itemEnhanceResult.degraded">%ItemName% has weakened further</Text>
			<Text id="itemEnhanceResult.enhancementRemoved">%ItemName% has lost its enhancement</Text>
			<Text id="itemEnhanceResult.enhancementReplaced">(previous enhancement lost)</Text>
			<Text id="itemEnhanceResult.improved">%ItemName% has been further enhanced</Text>
			<Text id="itemEnhanceResult.noEffect">The enhancement has no effect</Text>
			<Text id="itemEnhanceResult.repaired"></Text>
		</Language>
	</ItemType>

</TranscendenceModule>
	
